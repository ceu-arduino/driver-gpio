#include "wclock.ceu"
#include "gpio.ceu"

#define IN  2       // UNO/SAMD
//#define IN  3       // UNO
//#define IN  4       // UNO
//#define IN 10       // MEGA

output bool PIN_13;

loop do
    watching Pin(IN) do
        var bool x = false;
        every 500ms do
            x = not x;
            emit PIN_13(x);
        end
    end
    await 500ms;     // debouncing
    await Pin(IN);
    await 500ms;     // debouncing
end
